@model IEnumerable<EventEase.Models.Event>

<h2>Events List</h2>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Event</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EventName)</th>
            <th>@Html.DisplayNameFor(model => model.EventDate)</th>
            <th>@Html.DisplayNameFor(model => model.Venue.VenueName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var eventItem in Model)
    {
        <tr>
            <td>@eventItem.EventName</td>
            <td>@eventItem.EventDate.ToShortDateString()</td>
            <td>@eventItem.Venue.VenueName</td>
            <td>
                <a href="@Url.Action("Details", new { id = eventItem.EventId })" class="btn btn-info">Details</a>
                <a href="@Url.Action("Edit", new { id = eventItem.EventId })" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("Delete", new { id = eventItem.EventId })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
