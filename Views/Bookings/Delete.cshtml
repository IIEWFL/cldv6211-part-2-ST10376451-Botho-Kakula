@model EventEase.Models.Booking
@using EventEase.Models


@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<h4>Are you sure you want to delete this booking?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Event</dt>
        <dd class="col-sm-10">@Model.Event?.EventName</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue?.VenueName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="BookingId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
