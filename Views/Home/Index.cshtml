@{
    ViewData["Title"] = "EventEase - Home";
}

<style>
    .fade-in {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 1s ease-out forwards;
    }

    .fade-in-delay-1 { animation-delay: 0.2s; }
    .fade-in-delay-2 { animation-delay: 0.4s; }
    .fade-in-delay-3 { animation-delay: 0.6s; }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card:hover {
        transform: scale(1.02);
        transition: transform 0.3s ease;
    }

    .quick-stat {
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .hero {
        background: linear-gradient(to right, #007bff, #00c6ff);
        color: white;
        padding: 4rem 2rem;
        border-radius: 1rem;
    }

    .hero h1 {
        font-weight: 700;
    }

    .hero p {
        font-size: 1.25rem;
    }
</style>

<div class="container mt-5">
    <!-- Welcome Section -->
    <div class="hero text-center mb-5 fade-in fade-in-delay-1">
        <h1 class="display-4">Welcome to <span class="fw-bold">EventEase</span></h1>
        <p>Your complete and effective solution for managing venues, bookings, and events.</p>
        <a asp-controller="Bookings" asp-action="Create" class="btn btn-light btn-lg mt-3">Manage Bookings Now</a>
    </div>

    <!-- Feature Cards -->
    <div class="row text-center">
        <!-- Venues -->
        <div class="col-md-4 mb-4 fade-in fade-in-delay-1">
            <div class="card h-100 shadow-sm">
                <img src="https://cdn.prod.website-files.com/63d06722a6f6c82db2e3292f/63f68257d8dd8e6c0968db11_63654f5b476c431e8cb27486_Venue%2520tech.jpeg" class="card-img-top" alt="Venues">
                <div class="card-body">
                    <h5 class="card-title">Venues Management</h5>
                    <p class="card-text">Manage location, capacity, and venue media with ease.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Venues" asp-action="Index" class="btn btn-primary">View Venues</a>
                        <a asp-controller="Venues" asp-action="Create" class="btn btn-outline-primary">Add New Venue</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Events -->
        <div class="col-md-4 mb-4 fade-in fade-in-delay-2">
            <div class="card h-100 shadow-sm">
                <img src="https://cdn.prod.website-files.com/63d06722a6f6c82db2e3292f/63f68257d8dd8e6c0968db11_63654f5b476c431e8cb27486_Venue%2520tech.jpeg" class="card-img-top" alt="Events">
                <div class="card-body">
                    <h5 class="card-title">Events Management</h5>
                    <p class="card-text">Schedule, organize, and promote events smoothly.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Events" asp-action="Index" class="btn btn-primary">View Events</a>
                        <a asp-controller="Events" asp-action="Create" class="btn btn-outline-primary">Add New Event</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bookings -->
        <div class="col-md-4 mb-4 fade-in fade-in-delay-3">
            <div class="card h-100 shadow-sm">
                <img src="https://cdn.prod.website-files.com/63d06722a6f6c82db2e3292f/63f68257d8dd8e6c0968db11_63654f5b476c431e8cb27486_Venue%2520tech.jpeg" class="card-img-top" alt="Bookings">
                <div class="card-body">
                    <h5 class="card-title">Bookings Management</h5>
                    <p class="card-text">Control reservations and ensure efficient customer flow.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Bookings" asp-action="Index" class="btn btn-primary">View Bookings</a>
                        <a asp-controller="Bookings" asp-action="Create" class="btn btn-outline-primary">Create Booking</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Section -->
    <div class="row mt-5">
        <div class="col-md-4 fade-in fade-in-delay-1">
            <div class="card quick-stat bg-info text-white text-center mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Venues</h5>
                    <p class="display-6">@ViewBag.VenueCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in fade-in-delay-2">
            <div class="card quick-stat bg-success text-white text-center mb-3">
                <div class="card-body">
                    <h5 class="card-title">Upcoming Events</h5>
                    <p class="display-6">@ViewBag.EventCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in fade-in-delay-3">
            <div class="card quick-stat bg-warning text-white text-center mb-3">
                <div class="card-body">
                    <h5 class="card-title">Recent Bookings</h5>
                    <p class="display-6">@ViewBag.BookingCount</p>
                </div>
            </div>
        </div>
    </div>
</div>
